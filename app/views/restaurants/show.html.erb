<h1><%= @restaurant[:name] %></h1>
<p>Find us at <%= @restaurant[:address] %></p>
<ul>
  <% @restaurant.reviews.each do |review| %>
  <li><%=review.content%></li><p><%=review.rating%> stars</p>
  <% end %>
</ul>
<%= link_to "Write a review", new_restaurant_review_path(@restaurant), :class => "btn btn-primary"  %>
<%= link_to "Back to restaurants", restaurants_path(@restaurants), :class => "btn btn-primary"  %>
